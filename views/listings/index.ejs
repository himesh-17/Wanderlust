<% layout("./layouts/boilerplate") %>

<style>
  /* Page fade-up animation */
  .fade-up {
    opacity: 0;
    transform: translateY(25px);
    animation: fadeUp 0.8s ease forwards;
  }

  @keyframes fadeUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Card styling */
  .listing-card {
    border: none;
    border-radius: 15px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .listing-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
  }

  .listing-card img {
    border-top-left-radius: 15px;
    border-top-right-radius: 15px;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .listing-card:hover img {
    transform: scale(1.05);
  }

  .listing-card .card-body {
    background: #fff;
    padding: 1rem;
  }

  .listing-title {
    font-weight: 600;
    color: #212529;
  }

  .listing-price {
    font-size: 0.95rem;
    color: #6c757d;
  }

 /* FILTER BAR */
.filter-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 1rem;
  padding: 0.5rem 0;
  overflow: hidden;
  position: relative;
}

/* Scrollable filters */
#filters-scroll {
  display: flex;
  gap: 12px;
  overflow-x: auto;
  white-space: nowrap;
  padding-bottom: 6px;
  scroll-behavior: smooth;

  -ms-overflow-style: none;
  scrollbar-width: none;
}

#filters-scroll::-webkit-scrollbar {
  display: none;
}

/* Filter pill (anchor version) */
.filter {
  background: #f1f3f5;
  padding: 8px 16px;
  border-radius: 25px;
  font-weight: 500;
  display: inline-flex;
  align-items: center;
  cursor: pointer;
  text-decoration: none;      /* remove underline */
  color: #333;                /* default text color */
  transition: 0.25s;
}

.filter:hover {
  background: #0d6efd;
  color: #fff;
  transform: translateY(-2px);
}

.filter i {
  font-size: 1rem;
  margin-right: 6px;
}

  /* Toggle button fixed right */
  .toggle-box {
    flex-shrink: 0;
    white-space: nowrap;
    padding-left: 10px;
    border-left: 1px solid #dee2e6;
  }

  .toggle-box label {
    font-size: 0.9rem;
    font-weight: 500;
  }
</style>

<body class="fade-up">
  <div class="container py-5">

    <!-- FILTERS + TOGGLE -->
    <div class="filter-wrapper">

      <!-- Scrollable Filters -->
      <div id="filters-scroll">
    <a href="/api/filter/trending" class="filter">
        <i class="fa-solid fa-fire me-2"></i> Trending
    </a>

    <a href="/api/filter/stays" class="filter">
        <i class="fa-solid fa-bed me-2"></i> Stays
    </a>

    <a href="/api/filter/hotels" class="filter">
        <i class="fa-solid fa-hotel me-2"></i> Hotels
    </a>

    <a href="/api/filter/adventure" class="filter">
        <i class="fa-solid fa-mountain me-2"></i> Adventure
    </a>

    <a href="/api/filter/beach" class="filter">
        <i class="fa-solid fa-umbrella-beach me-2"></i> Beach
    </a>

    <a href="/api/filter/urban" class="filter">
        <i class="fa-solid fa-city me-2"></i> Urban
    </a>

    <a href="/api/filter/nature" class="filter">
        <i class="fa-solid fa-tree me-2"></i> Nature
    </a>

    <a href="/api/filter/lake" class="filter">
        <i class="fa-solid fa-water me-2"></i> Lake
    </a>

    <a href="/api/filter/camp" class="filter">
        <i class="fa-solid fa-campground me-2"></i> Camp
    </a>

    <a href="/api/filter/private" class="filter">
        <i class="fa-solid fa-person-booth me-2"></i> Private
    </a>

    <a href="/api/filter/arctic" class="filter">
        <i class="fa-solid fa-snowflake me-2"></i> Arctic
    </a>

    <a href="/api/filter/global" class="filter">
        <i class="fa-solid fa-globe me-2"></i> Global
    </a>
</div>


      <!-- Fixed Toggle -->
      <div class="toggle-box">
        <div class="form-check form-switch mb-0">
          <input class="form-check-input" type="checkbox" id="switchCheckDefault">
          <label class="form-check-label" for="switchCheckDefault">
            Total w/ Taxes
          </label>
        </div>
      </div>

    </div>

    <!-- LISTINGS -->
    <div class="row g-4 justify-content-center mt-3">
      <% for (let list of allListings) { %>
        <div class="col-lg-4 col-md-6 col-sm-10">
          <a href="/api/listings/<%= list.id %>" class="listing-link">
            <div class="card listing-card">
              <img src="<%= list.image.url %>" class="card-img-top" alt="<%= list.title %>" style="height: 16rem;" loading="lazy">

              <div class="card-body">
                <p class="card-text mb-1 listing-title"><%= list.title %></p>
                <p class="listing-price mb-0">â‚¹ <%= list.price.toLocaleString("en-IN") %> / night</p>

                <i class="taxe-info" style="display:none;">18% GST</i>
              </div>
            </div>
          </a>
        </div>
      <% } %>
    </div>

  </div>

  <script>
    // TAX TOGGLE
    let toggleSwitch = document.querySelector("#switchCheckDefault");

    toggleSwitch.addEventListener("click", () => {
      let taxeInfo = document.getElementsByClassName("taxe-info");

      for (let info of taxeInfo) {
        info.style.display = info.style.display !== "inline" ? "inline" : "none";
      }
    });
  </script>
</body>
