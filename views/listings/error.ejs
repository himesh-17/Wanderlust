<% layout("./layouts/boilerplate") %>

<style>
  .error-container {
    min-height: 75vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    opacity: 0;
    transform: translateY(25px);
    transition: all 0.8s ease;
  }

  .error-container.show {
    opacity: 1;
    transform: translateY(0);
  }

  .error-heading {
    font-size: 5rem;
    font-weight: 700;
    color: #e74c3c;
    letter-spacing: 2px;
  }

  .error-subtext {
    font-size: 1.25rem;
    color: #555;
    margin-top: 1rem;
    max-width: 600px;
  }

  .error-btns {
    margin-top: 2.5rem;
    display: flex;
    gap: 1rem;
  }

  .home-btn,
  .back-btn {
    border-radius: 50px;
    padding: 0.75rem 2rem;
    font-size: 1rem;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .home-btn {
    background-color: #007bff;
    color: #fff;
    border: none;
  }

  .home-btn:hover {
    background-color: #0069d9;
  }

  .back-btn {
    background-color: transparent;
    border: 2px solid #007bff;
    color: #007bff;
  }

  .back-btn:hover {
    background-color: #007bff;
    color: #fff;
  }
</style>

<div class="container">
  <div class="error-container" id="errorPage">
    <h1 class="error-heading">404</h1>
    <p class="error-subtext">
      <%= msg || "The page you’re looking for doesn’t exist or has been moved." %>
    </p>

    <div class="error-btns">
      <a href="/api/listings" class="home-btn">Go Home</a>
      <button class="back-btn" onclick="history.back()">Go Back</button>
    </div>
  </div>
</div>

<script>
  // Add entry animation on load
  window.addEventListener("DOMContentLoaded", () => {
    document.getElementById("errorPage").classList.add("show");
  });
</script>
